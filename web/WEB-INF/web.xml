<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ajava.controllers.Login</servlet-class>
    </servlet>
    <listener>
        <listener-class>
            com.ajava.controllers.Reminder
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>com.ajava.controllers.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>com.ajava.controllers.SendMail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Verify</servlet-name>
        <servlet-class>com.ajava.controllers.Verify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddList</servlet-name>
        <servlet-class>com.ajava.controllers.AddList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveList</servlet-name>
        <servlet-class>com.ajava.controllers.RemoveList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoneList</servlet-name>
        <servlet-class>com.ajava.controllers.DoneList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>com.ajava.controllers.UpdateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.ajava.controllers.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/SendMail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Verify</servlet-name>
        <url-pattern>/Verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddList</servlet-name>
        <url-pattern>/AddList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveList</servlet-name>
        <url-pattern>/RemoveList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoneList</servlet-name>
        <url-pattern>/DoneList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/UpdateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
